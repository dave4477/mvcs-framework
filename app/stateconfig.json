{
	"initialState": "init",
	"states": [
	{
		"stateName": "init",
		"preProcess":[
			"InitAppController:startApp"		
		],
		"postProcess":[
		],
		"outbound":["mainScreen"],
		"events":[
			"LoadView"
		]
	},

	{
		"stateName": "mainScreen",
		"preProcess":[
			"MainScreenController:show"
		],
		"postProcess":[
		],
		"outbound":["loading"],
		"events":[
			"LoadView"
		]
	},

	{
		"stateName": "loading",
		"preProcess":[
			"GameController:loadLevelData"
		],
		"postProcess":[
		],
		"outbound":["game"],
		"events":[
			"LoadView",
			"AssetsLoaded"
		]
	},


	{
		"stateName": "game",
		"preProcess":[
			"LoadingViewController:hide",
			"GameController:startGame"
		],
		"postProcess":[
		],
		"outbound":["popup", "levelComplete", "gameOver"],
		"events":[
			"PauseSimulation",
			"ResumeSimulation",
			"SimulationPaused",
			"SimulationResumed",
			"VisibilityHidden",
			"VisibilityShown",
			"UpdatePlayerScore",
			"PlayerDied",
			"PlayerRespawned",
			"PlayerModelUpdated",
			"LevelDataReceived",
			"LoadView",
			"TimeBonusCollected",
			"LevelFinished"
		]
	},

	{
		"stateName": "levelComplete",
		"preProcess":[],
		"postProcess":[],
		"outbound":["game", "mainScreen"],
		"events":[
		]
	},

	{
		"stateName": "gameOver",
		"preProcess":["GameController:gameOver"],
		"postProcess":[],
		"outbound":["mainScreen"],
		"events":[
		]
	},

	{
		"stateName": "popup",
		"preProcess":[],
		"postProcess":[],
		"outbound":["game"],
		"events":[
			"NextLevel"
		]
	}]
}